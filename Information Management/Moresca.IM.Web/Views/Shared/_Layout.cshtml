<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <link href="~/Scripts/material-components-web/material-components-web.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link href="~/Content/app.css" rel="stylesheet" />
    <script src="~/Scripts/material-components-web/material-components-web.js"></script>
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/react")
    <script src="~/Scripts/requirejs/require.js"></script>
</head>
<body class="mdc-typography">
    <main class="mdc-toolbar-fixed-adjust">
        @RenderBody()

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("Scripts", required: false)
    </main>
</body>
</html>